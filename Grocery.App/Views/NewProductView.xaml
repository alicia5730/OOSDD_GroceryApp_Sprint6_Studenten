<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.NewProductView"
             Title="Nieuw product toevoegen">

    <ContentPage.BindingContext>
        <viewmodels:NewProductViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Naam" Text="{Binding Name}" />
        <Entry Placeholder="Prijs (â‚¬)" Keyboard="Numeric" Text="{Binding Price}" />
        <Entry Placeholder="Voorraad" Keyboard="Numeric" Text="{Binding Stock}" />
        <DatePicker Date="{Binding ShelfLife}" />
        <Button Text="Opslaan" Command="{Binding SaveProductCommand}" />
    </VerticalStackLayout>
</ContentPage>